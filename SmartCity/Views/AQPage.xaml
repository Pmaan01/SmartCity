<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SmartCity.Views.AQPage"
    Title="Air Quality"
    BackgroundColor="#F9FAFB">
	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="20">
			<!-- Header -->
			<Label
                Text="Air Quality Index"
                FontSize="48"
                FontAttributes="Bold"
                TextColor="#1F2937"
                Margin="0,10,0,0" />

			<!-- Current City Info -->
			<Frame
                Padding="16"
                CornerRadius="16"
                HasShadow="False"
                BackgroundColor="#DBEAFE">
				<VerticalStackLayout Spacing="6">
					<HorizontalStackLayout Spacing="8" VerticalOptions="Center">
						<Label Text="ðŸ“" FontSize="16" />
						<Label
                            Text="{Binding AQ.City, StringFormat='Air Quality in {0}'}"
                            FontSize="15"
                            TextColor="#1E40AF"
                            FontAttributes="Bold"
                            VerticalOptions="Center" />
					</HorizontalStackLayout>
					<Label
                        Text="{Binding AQ.FetchedAt, StringFormat='Updated: {0:MMM dd, yyyy HH:mm}'}"
                        FontSize="11"
                        TextColor="#0C4A6E"
                        Opacity="0.8" />
				</VerticalStackLayout>
			</Frame>

			<!-- Main AQI Card -->
			<Frame
                CornerRadius="28"
                Padding="24"
                HasShadow="True"
                BackgroundColor="White"
                BorderColor="Transparent">
				<VerticalStackLayout Spacing="20">
					<!-- Category Badge -->
					<Frame
                        Padding="12"
                        CornerRadius="12"
                        HasShadow="False"
                        BackgroundColor="#FEF3C7"
                        BorderColor="Transparent">
						<Label
                            Text="{Binding AQ.Category}"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="#92400E"
                            HorizontalTextAlignment="Center" />
					</Frame>

					<!-- Large AQI Display -->
					<VerticalStackLayout Spacing="8" HorizontalOptions="Center">
						<Label
                            Text="AQI"
                            FontSize="14"
                            TextColor="#6B7280"
                            HorizontalTextAlignment="Center" />
						<Label
                            Text="{Binding AQ.AQI, StringFormat='{0}'}"
                            FontSize="72"
                            FontAttributes="Bold"
                            TextColor="#1F2937"
                            HorizontalTextAlignment="Center"
                            LineHeight="0.9" />
					</VerticalStackLayout>

					<!-- Main Pollutant -->
					<HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
						<Label
                            Text="Main Pollutant:"
                            FontSize="14"
                            TextColor="#6B7280"
                            FontAttributes="Bold" />
						<Label
                            Text="{Binding AQ.MainPollutant}"
                            FontSize="14"
                            TextColor="#1F2937"
                            FontAttributes="Bold" />
					</HorizontalStackLayout>

					<!-- Refresh Button -->
					<Button
                        Text="ðŸ”„ Refresh Data"
                        Command="{Binding RefreshCommand}"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        CornerRadius="12"
                        FontSize="16"
                        FontAttributes="Bold"
                        Padding="16,14"
                        Margin="0,8,0,0" />
				</VerticalStackLayout>
			</Frame>

			<!-- Hourly Trend Section -->
			<VerticalStackLayout Spacing="12">
				<Label
                    Text="Hourly Trend"
                    FontSize="18"
                    FontAttributes="Bold"
                    TextColor="#1F2937" />

				<Frame
                    CornerRadius="20"
                    Padding="16"
                    HasShadow="False"
                    BackgroundColor="White"
                    BorderColor="#E5E7EB"
                   >
					<CollectionView
                        ItemsSource="{Binding AQ.HourlyValues}"
                        HeightRequest="100"
                        SelectionMode="None">
						<CollectionView.ItemsLayout>
							<LinearItemsLayout Orientation="Horizontal" ItemSpacing="8" />
						</CollectionView.ItemsLayout>
						<CollectionView.ItemTemplate>
							<DataTemplate>
								<Frame
                                    Padding="12"
                                    CornerRadius="14"
                                    HasShadow="False"
                                    BackgroundColor="#F3F4F6"
                                    BorderColor="#D1D5DB"
                                    
                                    WidthRequest="60">
									<VerticalStackLayout
                                        Spacing="4"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center">
										<Label
                                            Text="{Binding .}"
                                            FontSize="16"
                                            FontAttributes="Bold"
                                            TextColor="#1F2937"
                                            HorizontalTextAlignment="Center" />
										<Label
                                            Text="AQI"
                                            FontSize="10"
                                            TextColor="#9CA3AF"
                                            HorizontalTextAlignment="Center" />
									</VerticalStackLayout>
								</Frame>
							</DataTemplate>
						</CollectionView.ItemTemplate>
					</CollectionView>
				</Frame>
			</VerticalStackLayout>

			<!-- Info Box -->
			<Frame
                Padding="16"
                CornerRadius="16"
                HasShadow="False"
                BackgroundColor="#E0F2FE"
                BorderColor="#0284C7"
                >
				<VerticalStackLayout Spacing="8">
					<Label
                        Text="â„¹ï¸ About AQI"
                        FontSize="13"
                        FontAttributes="Bold"
                        TextColor="#0C4A6E" />
					<Label
                        Text="0-50: Good | 51-100: Moderate | 101-150: Unhealthy for Sensitive Groups | 151-200: Unhealthy | 201-300: Very Unhealthy | 300+: Hazardous"
                        FontSize="11"
                        TextColor="#0C4A6E"
                        LineBreakMode="WordWrap" />
				</VerticalStackLayout>
			</Frame>

			<BoxView HeightRequest="20" BackgroundColor="Transparent" />
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>