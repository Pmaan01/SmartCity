<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="SmartCity.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SmartCity.Views"
    Title="SmartCity">

    <TabBar>
        <ShellContent Title="Weather" ContentTemplate="{DataTemplate views:WeatherPage}" />
        <ShellContent Title="Air Quality" ContentTemplate="{DataTemplate views:AQPage}" />
        <ShellContent Title="News" ContentTemplate="{DataTemplate views:NewsPage}" />
        <ShellContent Title="Parking" ContentTemplate="{DataTemplate views:ParkingPage}" />
    </TabBar>


</Shell>
