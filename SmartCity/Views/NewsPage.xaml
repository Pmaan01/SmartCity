<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SmartCity.Views.NewsPage"
    Title="News"
    BackgroundColor="#F9FAFB">

	<Grid RowDefinitions="Auto,*" ColumnDefinitions="*">
		<VerticalStackLayout
            Grid.Row="0"
            Padding="20"
            Spacing="16"
            BackgroundColor="#FFFFFF">
			<Label
                Text="Latest News"
                FontSize="48"
                FontAttributes="Bold"
                TextColor="#1F2937"
                Margin="0,10,0,0" />

			<Frame
                Padding="14"
                CornerRadius="14"
                HasShadow="False"
                BackgroundColor="#DBEAFE"
                BorderColor="#93C5FD">
				<HorizontalStackLayout Spacing="10" VerticalOptions="Center">
					<Label Text="ðŸ“" FontSize="18" />
					<Label
                        Text="{Binding SelectedCity, StringFormat='News from: {0}'}"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="#1E40AF"
                        VerticalOptions="Center" />
				</HorizontalStackLayout>
			</Frame>
		</VerticalStackLayout>

		<ScrollView Grid.Row="1">
			<VerticalStackLayout Padding="20" Spacing="12">
				<ActivityIndicator
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}"
                    Color="#3B82F6"
                    Scale="1.5"
                    Margin="0,20,0,20" />

				<Label
                    Text="{Binding StatusMessage}"
                    FontSize="13"
                    TextColor="#6B7280"
                    HorizontalTextAlignment="Center"
                    Margin="0,10,0,10" />

				<CollectionView
                    ItemsSource="{Binding Articles}"
                    Margin="0,0,0,0"
                    SelectionMode="None">
					<CollectionView.ItemsLayout>
						<LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
					</CollectionView.ItemsLayout>
					<CollectionView.ItemTemplate>
						<DataTemplate>
							<Frame
                                Padding="16"
                                Margin="0"
                                CornerRadius="18"
                                HasShadow="True"
                                BackgroundColor="White"
                                BorderColor="Transparent">
								<VerticalStackLayout Spacing="12">
									<Label
                                        Text="{Binding Title}"
                                        FontAttributes="Bold"
                                        FontSize="17"
                                        LineBreakMode="WordWrap"
                                        TextColor="#1F2937" />

									<HorizontalStackLayout Spacing="8" VerticalOptions="Center">
										<Label
                                            Text="{Binding Source}"
                                            FontSize="12"
                                            TextColor="#6B7280"
                                            FontAttributes="Bold" />
										<Label Text="â€¢" FontSize="12" TextColor="#D1D5DB" />
										<Label
                                            Text="{Binding PublishedAt, StringFormat='{0:MMM dd, yyyy}'}"
                                            FontSize="12"
                                            TextColor="#9CA3AF" />
									</HorizontalStackLayout>

									<Frame
                                        Padding="0"
                                        Margin="0,8,0,0"
                                        CornerRadius="12"
                                        HasShadow="False"
                                        BackgroundColor="Transparent"
                                        HeightRequest="180"
                                        IsClippedToBounds="True">
										<Image
                                            Source="{Binding ImageUrl}"
                                            Aspect="AspectFill" />
									</Frame>

									<Button
                                        Text="ðŸ“– Read Full Article"
                                        BackgroundColor="#3B82F6"
                                        TextColor="White"
                                        CornerRadius="10"
                                        FontSize="14"
                                        FontAttributes="Bold"
                                        Padding="12,12"
                                        Margin="0,4,0,0"
                                        CommandParameter="{Binding Url}"
                                        Clicked="OnReadMoreClicked" />
								</VerticalStackLayout>
							</Frame>
						</DataTemplate>
					</CollectionView.ItemTemplate>
				</CollectionView>

				<BoxView HeightRequest="30" BackgroundColor="Transparent" />
			</VerticalStackLayout>
		</ScrollView>
	</Grid>
</ContentPage>